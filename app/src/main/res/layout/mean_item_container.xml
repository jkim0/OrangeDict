<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/label_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner android:id="@+id/spinner_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/label_type"
        android:layout_centerVertical="true"
        android:entries="@array/type_name_array"
        android:layout_toRightOf="@id/label_no"/>

    <ImageButton android:id="@+id/remove_button"
        android:src="@drawable/ic_remove_black_18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText android:id="@+id/edittext_mean"
        android:hint="@string/hint_input_mean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/spinner_type"
        android:layout_toLeftOf="@id/remove_button"/>

</RelativeLayout>